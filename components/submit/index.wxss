/* components/submit/index.wxss */
.p-submit{
  border-top: 1rpx solid #edeff2;
  position: fixed;
  z-index: 5;
	bottom: 0;
	background-color: #fff;
  left: 0;
  right: 0;
  padding: 30rpx 40rpx;
}
.p-submit-button:active{
  filter: brightness(90%)
}
.p-submit-button-disabled{
  color: #fff;
  filter: opacity(.6)!important
}
.p-submit-button{
	width: 670rpx;
	height: 96rpx;
  line-height: 96rpx;
	background-image: linear-gradient(90deg, 
		#7d86fc 0%, 
		#635ff2 100%), 
	linear-gradient(
		#ffffff, 
		#ffffff);
	background-blend-mode: normal, 
		normal;
	border-radius: 6rpx;
	font-size: 36rpx;
	letter-spacing: 1rpx;
	color: #fefefe;
}