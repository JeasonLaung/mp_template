/* components/tags/index.wxss */
@import '../../icon.wxss';
.skill-box{
  display: flex;
  flex-wrap:wrap;
  padding-bottom: 0;
  padding-top:28rpx;
}
.skill-box-column{
  flex-direction: column;
}
.skill-box .skill{
  position: relative;
  height: 60rpx;
  line-height: 60rpx;
  padding-left:30rpx;
  padding-right: 30rpx;
  margin-right:18rpx;
  margin-bottom: 28rpx;
  font-size:26rpx;
  color:#ffffff;
  background-color:#53C68B;
  overflow: visible;
  border-radius: 6rpx;
}
.skill-box-column .skill .iconfont{
  position: absolute;
  right: 10rpx;
  top: 0;
  bottom: 0;
  margin: auto;
  text-align: center;
}
.skill-box .btn-add{
  height: 60rpx;
  line-height: 60rpx;
  padding-left:30rpx;
  padding-right: 30rpx;
  margin-right:18rpx;
  margin-bottom: 28rpx;
  font-size:26rpx;
  color:#BFBFBF;
  border-radius: 6rpx;
  border:1rpx dashed #ccc;
}
.save-btn{
  margin-top:60rpx;
}