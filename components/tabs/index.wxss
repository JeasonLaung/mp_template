/* components/tabs/index.wxss */
.p-tabs{
  display:flex;
	width:100%;
	box-sizing:border-box;
	position:relative;
	justify-content:space-around;
	align-items:center;
	-webkit-box-align:center;
	width:100%;
  height: 84rpx;
  line-height: 84rpx;
	background-color: #f5f7fa;
}
.p-tabs_fixed{
	left: 0;
  z-index: 2;
  position: fixed;
  top: 0;
}
.p-tabs-scroll{
  display:block;
	overflow-x:auto;
	white-space:nowrap
}
.p-tabs-slide{
	position: absolute;
	top: 0;
	left: 0;
	transform:translateX(0);
	transition: transform .3s;
	border-top: 4rpx solid #493b9d;
	box-sizing: border-box;
	background-color: #fff;
	height: 100%;
}